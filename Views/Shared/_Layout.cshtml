<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PersonalSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/parallax.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand d-flex w-25 mr-auto justify-content-start"
                   asp-area="" asp-controller="Home" asp-action="Index"><img src="~/navbar-icon.png" /><span class="align-self-center d-none d-sm-block pl-2">Reeves</span></a>
                <div class="navbar-nav w-50 justify-content-center">
                    <div class="nav-item">
                        <button type="submit" class="btn btn-primary" onclick="window.open('/photos/TrevorReeves.pdf')">View Resume</button>
                    </div>
                </div>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ml-auto w-100 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="testingground">Testing</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-dark text-white">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-auto">
                    &copy; 2021 - Trevor Reeves | <a href="~/photos/TrevorReeves.pdf">View Resume</a>
                </div>
                <div class="col-auto pl-sm-2">
                    <a href="https://www.linkedin.com/in/trevorreeves/"><i class="fab fa-linkedin"></i></a>
                    <a href="https://github.com/reevest2"><i class="fab fa-github"></i></a>
                </div>
            </div>
        </div>

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
